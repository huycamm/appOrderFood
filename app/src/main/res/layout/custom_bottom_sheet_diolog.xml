<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#E8DDDD">

        <ImageView
            android:id="@+id/imgFoodBottomDiolog"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/banhmy" />

        <TextView
            android:id="@+id/txtTenMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgFoodBottomDiolog"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtGiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="#DE4545"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/imgFoodBottomDiolog"
            app:layout_constraintTop_toBottomOf="@+id/txtTenMonAn" />

        <TextView
            android:id="@+id/txtSoLuongBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/imgFoodBottomDiolog"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaTien" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHuyThem"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_huy"
            android:text="Hủy bỏ"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_them"
            android:text="Thêm vào giỏ hàng"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>